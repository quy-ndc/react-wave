{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ES2017",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "noEmit": false,
        "paths": {
            "@configs/*": [
                "./packages/configs/*"
            ],
            "@ui-mobile/*": [
                "./packages/ui-mobile/src/*"
            ],
            "@ui-web/*": [
                "./packages/ui-web/src/*"
            ]
        }
    },
    "include": [
        "packages",
        "apps"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}