{
  "name": "@reactwave/ui-web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "style-global:build": "node ./scripts/generate-style-global.mjs",
    "style-global:watch": "node ./scripts/watch-style-global.mjs",
    "build:types": "tsc",
    "style-global:copy": "shx cp ./style.global.css ./dist/style.global.css",
    "build": "npm run style-global:build && npm run build:types && npm run style-global:copy",
    "dev": "npm-run-all -p style-global:watch dev:types",
    "dev:types": "tsc --watch",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@reactwave/configs": "*",
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./src/*",
      "default": "./src/*"
    }
  },
  "files": [
    "src"
  ]
}
