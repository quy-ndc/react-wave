{
  "name": "@reactwave/ui-web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc && tailwindcss -i ./src/tailwind.css -o ./dist/styles.css --minify",
    "dev": "tsc --watch",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "@reactwave/configs": "*"
  },
  "exports": {
    ".": { "types": "./src/index.ts", "default": "./src/index.ts" },
    "./*": { "types": "./src/*", "default": "./src/*" },
    "./styles.css": "./src/tailwind.css"
  },
  "publishConfig": {
    "directory": "dist"
  }
}
